{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-pp-express" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-aldrapay" class="form-horizontal">
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-vendor"><span data-toggle="tooltip" title="{{ entry_companyid_help }}">{{ entry_companyid }}</span></label>
            <div class="col-sm-10">
              <input type="text" name="payment_aldrapay_companyid" value="{{ payment_aldrapay_companyid }}" placeholder="{{ entry_companyid }}" id="input-vendor" class="form-control" />
              {% if error_companyid %}
              <div class="text-danger">{{ error_companyid }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-key"><span data-toggle="tooltip" title="{{ entry_encyptionkey_help }}">{{ entry_encyptionkey }}</span></label>
            <div class="col-sm-10">
              <input type="text" name="payment_aldrapay_encyptionkey" value="{{ payment_aldrapay_encyptionkey }}" placeholder="{{ entry_encyptionkey }}" id="input-key" class="form-control" />
              {% if error_encyptionkey %}
              <div class="text-danger">{{ error_encyptionkey }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-aldrapay-encyptionalgo"><span data-toggle="tooltip" title="{{ entry_encyptionalgo_help }}">{{ entry_encyptionalgo }}</span></label>
            <div class="col-sm-10">
              <select name="payment_aldrapay_encyptionalgo" id="input-aldrapay-encyptionalgo" class="form-control">
                {% for algo_type in algo_types %}
                {% if algo_type.algo_type_id == payment_aldrapay_encyptionalgo %}
                <option value="{{ algo_type.algo_type_id }}" selected="selected">{{ algo_type.name }}</option>
                {% else %}
                <option value="{{ algo_type.algo_type_id }}">{{ algo_type.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-key"><span data-toggle="tooltip" title="{{ entry_domain_payment_page_help }}">{{ entry_domain_payment_page }}</span></label>
            <div class="col-sm-10">
              <input type="text" name="payment_aldrapay_domain_payment_page" value="{{ payment_aldrapay_domain_payment_page }}" placeholder="{{ entry_domain_payment_page }}" id="input-key" class="form-control" />
              {% if error_domain_payment_page %}
              <div class="text-danger">{{ error_domain_payment_page }}</div>
              {% endif %}
            </div>
          </div>
          {% if 1 == 2 %}
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-aldrapay-payment-type">{{ entry_payment_type }}</label>
            <div class="col-sm-10">
              <select name="payment_aldrapay_payment_type" id="input-aldrapay-payment-type" class="form-control">
                {% for payment_type in payment_types %}
                {% if payment_type.payment_type_id == payment_aldrapay_payment_type %}
                <option value="{{ payment_type.payment_type_id }}" selected="selected">{{ payment_type.name }}</option>
                {% else %}
                <option value="{{ payment_type.payment_type_id }}">{{ payment_type.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>
          {% endif %}
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-order-status">{{ entry_order_status }}</label>
            <div class="col-sm-10">
              <select name="payment_aldrapay_completed_status_id" id="input-order-status" class="form-control">
                {% for order_status in order_statuses %}
                {% if order_status.order_status_id == payment_aldrapay_completed_status_id %}
                <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                {% else %}
                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-order-failed-status">{{ entry_order_status_failed_text }}</label>
            <div class="col-sm-10">
              <select name="payment_aldrapay_failed_status_id" id="input-order-failed-status" class="form-control">
                {% for order_status in order_statuses %}
                {% if order_status.order_status_id == payment_aldrapay_failed_status_id %}
                <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                {% else %}
                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-geo-zone">{{ entry_geo_zone }}</label>
            <div class="col-sm-10">
              <select name="payment_liqpay_geo_zone_id" id="input-geo-zone" class="form-control">
                <option value="0">{{ text_all_zones }}</option>
                {% for geo_zone in geo_zones %}
                {% if geo_zone.geo_zone_id == payment_aldrapay_geo_zone_id %}
                <option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}</option>
                {% else %}
                <option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="payment_aldrapay_status" id="input-status" class="form-control">
                {% if payment_aldrapay_status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_aldrapay_sort_order" value="{{ payment_aldrapay_sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
            </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}
